{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext" ,
    "baseUrl": ".",
     "paths": {
       "*": ["src/*"],
       "common/*": ["common/*"],
       "animations/*": ["animations/*"],
       "screens/*": ["screens/*"],
       "hooks/*": ["hooks/*"],
       "components/*": ["components/*"],
       "navigation/*": ["navigation/*"],
       "assets/*": ["assets/*"],
       "services/*": ["services/*"],
       "helper/*": ["helper/*"],
       "@redux/*": ["redux/*"],
       "api/*": ["api/*"]
       
     },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}